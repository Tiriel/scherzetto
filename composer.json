{
    "name": "scherzetto/scherzetto",
    "description": "Scherzetto micro framework",
    "type": "project",
    "require": {
        "php": "^7.1",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "twig/twig": "^2.4",
        "guzzlehttp/psr7": "^1.4",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1",
        "codacy/coverage": "^1.4",
        "phpstan/phpstan": "^0.9.2",
        "phpstan/phpstan-phpunit": "^0.9.4",
        "friendsofphp/php-cs-fixer": "^2.14",
        "sensiolabs/security-checker": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "./src/App/",
            "Lib\\": "./src/Lib/",
            "Tests\\": "./tests/Tests/"
        }
    },
